import { Button, ListView, HorizontalBox } from "std-widgets.slint";
import { UserData, UserList } from "user.slint";
import { EntryData, Timeline } from "timeline.slint";

component MyButton inherits Rectangle {
    width: 200px;
    height: 80px;
    
    callback clicked <=> button.clicked;
    button := Button {
        width: parent.width;
        height: parent.height;
        text: "Update";
    }
}

export component MainWindow inherits Window {
    min-height: 250px;
    min-width: 800px;
    preferred-height: 600px;
    preferred-width: 1000px;

    in-out property <[EntryData]> events;
    in-out property <[UserData]> users;
    callback update <=> button.clicked;
    callback user-clicked <=> userlist.clicked;


    HorizontalBox {
        VerticalLayout {
            spacing: 3px;

            Text { text: "Users"; }
            userlist := UserList { model: users; }
        }

        VerticalLayout {
            spacing: 3px;

            Text { text: "Events"; }
            Timeline { model: events; }
        }

        VerticalLayout {
            alignment: end;

            button := MyButton {}
        }
    }
}
